<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="0.04"
        android:background="@drawable/bg_round_white"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_title"
            style="@style/font_black_14sp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/text_edit" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="0.88"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <EditText
                    android:id="@+id/edit_content"
                    style="@style/font_black_14sp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:hint="@string/hint_edit_content"
                    android:imeOptions="actionNone"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:theme="@style/AppTheme.TextInputEditText" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_confirm"
                style="@style/font_white_12sp"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_middle"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:background="@drawable/bg_round_primary"
                android:gravity="center"
                android:text="@string/text_confirm" />

            <Button
                android:id="@+id/btn_cancel"
                style="@style/font_white_12sp"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_middle"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="28dp"
                android:layout_weight="1"
                android:background="@drawable/bg_round_accent"
                android:gravity="center"
                android:text="@string/text_cancel" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>