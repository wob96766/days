<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/font_black_14sp"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large"
            android:text="프로필을 수정하시려면 사진을 터치하세요" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/large"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_round_blue_40dp"
                android:src="@mipmap/ic_person"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/large"
                android:orientation="vertical">
                <TextView
                    style="@style/font_black_16sp"
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:hint="@string/hint_noname"/>

                <TextView
                    style="@style/font_black_12sp"
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_name"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/large"
            android:paddingRight="@dimen/large"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/view_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_middle"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">
                <TextView
                    style="@style/font_black_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/large"
                    android:text="@string/text_lock" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:theme="@style/AppDarkTheme"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke"
                android:background="@color/light_grey_extra"/>

            <RelativeLayout
                android:id="@+id/view_notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_middle"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">
                <TextView
                    style="@style/font_black_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/large"
                    android:text="@string/text_notification" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:theme="@style/AppDarkTheme"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke"
                android:background="@color/light_grey_extra"/>

            <RelativeLayout
                android:id="@+id/view_data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_middle"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">
                <TextView
                    style="@style/font_black_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/large"
                    android:text="@string/text_data" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke"
                android:background="@color/light_grey_extra"/>

            <RelativeLayout
                android:id="@+id/view_trace"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_middle"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">
                <TextView
                    style="@style/font_black_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/large"
                    android:text="@string/text_trace" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke"
                android:background="@color/light_grey_extra"/>

            <RelativeLayout
                android:id="@+id/view_mode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_middle"
                android:foreground="?attr/selectableItemBackground"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:orientation="vertical">
                <TextView
                    style="@style/font_black_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/large"
                    android:text="@string/text_mode" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke"
                android:background="@color/light_grey_extra"/>

            <RelativeLayout
                android:id="@+id/view_connect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_middle"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">
                <TextView
                    style="@style/font_black_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/large"
                    android:text="@string/text_connect" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke"
                android:background="@color/light_grey_extra"/>

            <RelativeLayout
                android:id="@+id/view_tutorial"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_middle"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">
                <TextView
                    style="@style/font_black_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/large"
                    android:text="@string/text_tutorial" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke"
                android:background="@color/light_grey_extra"/>

            <RelativeLayout
                android:id="@+id/view_terms"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_middle"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">
                <TextView
                    style="@style/font_black_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/large"
                    android:text="@string/text_terms" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke"
                android:background="@color/light_grey_extra"/>

            <RelativeLayout
                android:id="@+id/view_policy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_middle"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">
                <TextView
                    style="@style/font_black_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/large"
                    android:text="@string/text_policy" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke"
                android:background="@color/light_grey_extra"/>

            <RelativeLayout
                android:id="@+id/view_faq"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_middle"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">
                <TextView
                    style="@style/font_black_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/large"
                    android:text="@string/text_faq" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke"
                android:background="@color/light_grey_extra"/>

            <RelativeLayout
                android:id="@+id/view_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_middle"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"

                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">
                <TextView
                    style="@style/font_black_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/large"
                    android:text="@string/text_logout" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/stroke"
                android:layout_marginBottom="@dimen/height_xlarge"
                android:background="@color/light_grey_extra"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
